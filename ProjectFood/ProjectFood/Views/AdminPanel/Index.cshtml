@{
    ViewBag.Title = "AdminPanel";
}

<div class="page-header nopadding-xs">
    <h1>AdminPanel</h1>
</div>
<div class="container-fluid nopadding">
    <div class="col-md-4">
        <div class="panel panel-primary">
            <div class="panel-heading lead">Tilbud</div>
            <div class="panel-body">
                <div class="list-group">
                    <a href="@Url.Action("LoadNewOffers", "AdminPanel")" class="list-group-item list-group-item-info">Hent nye tilbud</a>
                    <div style="height: 20px;"></div>
                    @using (Html.BeginForm("ChangeTimePeriod", "AdminPanel"))
                    {
                        <div>
                            @Html.TextBox("year", null, new { @class = "form-control", @placeholder = "År", @size = "30" })
                            @Html.TextBox("month", null, new { @class = "form-control", @placeholder = "Måned", @size = "30" })
                            @Html.TextBox("day", null, new { @class = "form-control", @placeholder = "Dag", @size = "30" })
                        </div>
                        <button type="submit" class="list-group-item list-group-item-info btn-block">Ændre tidspunktet for PF</button>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="panel panel-primary">
            <div class="panel-heading lead">Database</div>
            <div class="panel-body">
                <div class="list-group">
                    <a href="@Url.Action("DeleteAllShoppinglistItems", "AdminPanel")" class="list-group-item list-group-item-info">Ryd alle indkøbslister</a>
                    <a href="@Url.Action("DeleteAllShoppinglists", "AdminPanel")" class="list-group-item list-group-item-info">Slet alle indkøbslister</a>
                    <div style="height: 20px;"></div>
                    <a href="@Url.Action("DeleteAllRecipies", "AdminPanel")" class="list-group-item list-group-item-info">Slet alle opskrifter</a>
                    <a href="@Url.Action("DeleteAllRecipiesRatings", "AdminPanel")" class="list-group-item list-group-item-info">Slet vurderingerne fra alle opskrifter</a>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <script type="text/javascript">
        $('.datepicker').datepicker(); //Initialise any date pickers
    </script>
}