@model ProjectFood.Models.RegisterViewModel
@{
    ViewBag.Title = "Opret bruger";
}

<div class="page-header nopadding-xs">
    <h1><span class="glyphicon glyphicon-user"></span>&nbsp;&nbsp; @ViewBag.Title</h1>
</div>
@if(ViewBag.BadWord != null) {
        <div class="alert alert-warning alert-dismissable errormessage">
            <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <h1>Det kan du da ikke kalde dig selv!</h1>
            <p class="lead">Hvordan ville du have det, hvis din mor kaldte dig @ViewBag.BadWord??</p>
        </div>
}
<div class="container-fluid nopadding">
@using(Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" })) {
    @Html.AntiForgeryToken()
    <div class="form-group">
        <div class="col-md-6 col-md-offset-3">
            <label for="name">Angiv hvilket navn du ønsker vist på ProjectFood</label>
            <input class="form-control" type="text" name="name" required placeholder="Navn til visning" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-6 col-md-offset-3">
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="input-group">
                <div class="input-group-addon"><span style="font-family: 'Segoe UI Emoji';">&#64;</span></div>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email" })

            </div>
        </div>
        <div class="form-group">
            <div class="col-md-6 col-md-offset-3">
                <div class="input-group">
                    <div class="input-group-addon"><span style="font-family: 'Segoe UI Emoji';">&#128273;</span></div>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Kodeord" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-6 col-md-offset-3">
                <div class="input-group">
                    <div class="input-group-addon"><span style="font-family: 'Segoe UI Emoji';">&#128273;</span></div>
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Bekræft kodeord" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-6 col-md-offset-3">
                <input type="submit" class="btn btn-success btn-block" value="Opret!" />
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
