<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="mobile-web-app-capable" content="yes">
    <link rel="icon" href="@Url.Content("~/content/favicon.ico")" />
    <title>@ViewBag.Title - ProjectFood</title>
    @Styles.Render("~/Content/css")
    

</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("ProjectFood", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="@Url.Action("Index", "ShoppingLists")"><span class="glyphicon glyphicon-list"></span>&nbsp;&nbsp;Indkøbslister</a></li>
                    <li><a href="@Url.Action("WatchList", "ShoppingLists")"><span class="glyphicon glyphicon-eye-open"></span>&nbsp;&nbsp;Overvågningsliste</a></li>
                    <li><a href="@Url.Action("Index", "Offer")"><span class="glyphicon glyphicon-tags"></span>&nbsp;&nbsp;Tilbud</a></li>
                    <li><a href="@Url.Action("Index", "Recipes")"><span class="glyphicon glyphicon-cutlery"></span>&nbsp;&nbsp;Opskrifter</a></li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - SW3-P3 Group DS304E14</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
  
    @RenderSection("scripts", required: false)
</body>
</html>
