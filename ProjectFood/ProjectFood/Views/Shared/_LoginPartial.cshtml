@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a href="@Url.Action("Index", "User")"
                   title="Brugerindstillinger">
                    <span class="glyphicon glyphicon-cog"></span>&nbsp;&nbsp;Brugerinstillinger
                </a>
            </li>
            <li>
                <a href="javascript:document.getElementById('logoutForm').submit()">
                    <span class="glyphicon glyphicon-log-out"></span>&nbsp;&nbsp;Log af
                </a>
            </li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>
            <a id="registerLink" href="@Url.Action("Register", "Account")">
                <span class="glyphicon glyphicon-user"></span>&nbsp;&nbsp;Opret Bruger
            </a>
        </li>
        <li>
            <a id="loginLink" href="@Url.Action("Login", "Account")">
                <span class="glyphicon glyphicon-log-in"></span>&nbsp;&nbsp;Log ind
            </a>
        </li>
    </ul>
}
