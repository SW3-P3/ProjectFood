<div id="deleteShoppingListModal" class="modal fade">
    <div class="modal-dialog modal-lg" style="margin-top: 10%;">
        <div class=" modal-content">
            <div class="modal-body">
                <div class="alert alert-warning">
                    <h2>Er du sikker på, at du vil slette <span id="shoppingListTitle_delete"></span>?</h2>
                    <p class="lead">Den kan ikke gendannes, og vil være tabt for evigt.<br /><br /></p>
                    <div class="row">
                        @using (Html.BeginForm("Delete", "ShoppingLists", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <input type="hidden" id="shoppingListID_delete" name="id" value="" />
                            <input type="hidden" name="from" value="@Request.Url.PathAndQuery" />
                            <button type="button" class="btn btn-primary btn-lg btn-block" data-dismiss="modal">Nej</button>
                            <button type="submit" class="btn btn-danger btn-lg btn-block">
                                Ja, slet den!
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->