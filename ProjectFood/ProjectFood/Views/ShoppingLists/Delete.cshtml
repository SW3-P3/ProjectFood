@model ProjectFood.Models.ShoppingList

@{
    ViewBag.Title = "Slet " + Model.Title;
}
<div class="page-header">
    <h1>Indkøbslister</h1>
</div>

<div class="alert alert-danger">
    <h2>Er du sikker på, at du vil slette @Model.Title?</h2>
    <p class="lead">Indkøbslisten kan ikke gendannes, og vil være tabt for evigt.<br /><br /></p>
    <div class="row">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
                <a href="@Url.Action("Index", "ShoppingLists")" class="btn btn-primary btn-lg btn-block">Nej, tag mig tilbage.</a>
                <button type="submit" class="btn btn-danger btn-lg btn-block">
                    Ja, slet den!
                </button>
        }
    </div>
</div>
